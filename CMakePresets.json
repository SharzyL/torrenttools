{
  "version": 3,
  "configurePresets": [
    {
      "name": "common",
      "generator": "Ninja Multi-Config",
      "environment": {
        "VCPKG_ROOT": "${sourceDir}/vcpkg"
      },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "hidden": true
    },
    {
      "name": "features-tests",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_MANIFEST_FEATURES": "tests",
        "TORRENTTOOLS_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "features-tests-isal",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_MANIFEST_FEATURES": "tests;isal",
        "TORRENTTOOLS_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "features-isal",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_MANIFEST_FEATURES": "isal"
      }
    },
    {
      "name": "linux",
      "inherits": ["common", "features-tests"],
      "binaryDir": "${sourceDir}/cmake-build-linux"
    },
    {
      "name": "linux-isal",
      "inherits": ["common", "features-tests-isal"],
      "binaryDir": "${sourceDir}/cmake-build-linux-isal"
    },
    {
      "name": "linux-from-tarball",
      "inherits": ["common", "features-tests-isal"],
      "binaryDir": "${sourceDir}/cmake-build-from-tarball",
      "cacheVariables": {
        "VCPKG_INSTALL_OPTIONS": "--no-downloads",
        "XDG_CACHE_HOME": "${sourceDir}/vcpkg/cache"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux",
      "configuration": "Debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux",
      "configuration": "Release"
    },
    {
      "name": "linux-relwithdebinfo",
      "configurePreset": "linux",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "linux-isal-debug",
      "configurePreset": "linux-isal",
      "configuration": "Debug"
    },
    {
      "name": "linux-isal-release",
      "configurePreset": "linux-isal",
      "configuration": "Release"
    },
    {
      "name": "linux-isal-relwithdebinfo",
      "configurePreset": "linux-isal",
      "configuration": "RelWithDebInfo"
    }
  ]
}